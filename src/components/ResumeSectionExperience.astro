---
const { items } = Astro.props;
---

{items.map((p) => (
  <div class="mb-12">
    <h3 class="text-2xl text-cyan-500 font-bold mb-2">{p.position} <span class="float-right font-normal text-xl">{p.startDate} - {p.endDate ? p.endDate : 'Now'}</span></h3>
    <h4 class="text-xl mb-3">{p.name} <span class="float-right font-normal">{p.location}</span></h4>
    <p set:html={p.summary.replace(/(\r\n|\r|\n)/g, '<br>')}></p>
    <ul>{p.highlights}</ul>
  </div>
))}